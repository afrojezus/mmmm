{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"organizeImports": {
		"enabled": true,
		"ignore": [
			"node_modules/**/*",
			".git/**/*",
			".next/**/*",
			"next.config.js"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": [
			"node_modules/**/*",
			".git/**/*",
			".next/**/*",
			"next.config.js"
		]
	},
	"formatter": {
		"enabled": true,
		"indentWidth": 4,
		"ignore": [
			"node_modules/**/*",
			".git/**/*",
			".next/**/*",
			"next.config.js"
		]
	}
}

{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "organizeImports": {
    "enabled": true,
    "ignore": ["node_modules/**/*", ".git/**/*", ".next/**/*", "next.config.js"]
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useExhaustiveDependencies": "error",
        "useHookAtTopLevel": "error"
      },
      "performance": {
        "all": true
      }
    },
    "ignore": ["node_modules/**/*", ".git/**/*", ".next/**/*", "next.config.js"]
  },
  "formatter": {
    "enabled": true,
    "indentWidth": 2,
    "indentStyle": "space",
    "lineWidth": 80,
    "ignore": ["node_modules/**/*", ".git/**/*", ".next/**/*", "next.config.js"]
  },
  "javascript": {
    "formatter": {
      "enabled": true,
      "semicolons": "asNeeded",
      "bracketSameLine": false,
      "jsxQuoteStyle": "double",
      "trailingCommas": "all",
      "quoteStyle": "double",
      "arrowParentheses": "always"
    }
  }
}
